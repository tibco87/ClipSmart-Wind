{
  "manifest_version": 2,
  "name": "__MSG_appName__",
  "description": "__MSG_appDescription__",
  "version": "1.0.6",
  "default_locale": "en",
  
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  
  "browser_action": {
    "default_popup": "popup/popup-firefox.html",
    "default_icon": {
      "16": "assets/icon-16.png",
      "32": "assets/icon-32.png",
      "48": "assets/icon-48.png",
      "128": "assets/icon-128.png"
    }
  },
  
  "background": {
    "scripts": ["background/background-firefox.js"],
    "persistent": false
  },
  
  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "storage",
    "activeTab",
    "contextMenus",
    "alarms",
    "https://ipapi.co/",
    "https://extensionpay.com/",
    "https://translate.googleapis.com/",
    "https://clipsmart-translation-proxy.vercel.app/"
  ],
  
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+V",
        "mac": "Command+Shift+V"
      },
      "description": "Open ClipSmart"
    },
    "copy-last": {
      "suggested_key": {
        "default": "Ctrl+Shift+1",
        "mac": "Command+Shift+1"
      },
      "description": "Copy last clipboard item"
    }
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": [
        "https://tibco87.github.io/*",
        "https://*.github.io/*"
      ],
      "js": ["content/content-firefox.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://extensionpay.com/*"],
      "js": ["js/extpay.js"],
      "run_at": "document_start"
    }
  ],
  
  "web_accessible_resources": [
    "welcome.html",
    "welcome.css", 
    "welcome.js",
    "privacy.html",
    "privacy.css",
    "privacy.js"
  ]
}
